<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>Cadastro</title>
    <%- include('../views/head'); %>
</head>

<body>
    <%- include('../views/nav'); %>
        <div class="text-center pt-4">
            <h2>Eventos listados</h2>
            <p class="lead">Segue abaixo relação de eventos já incluídos</p>
        </div>
        <table class="table table-hover" style="margin: 0 auto; width: 70%;">
            <thead class="table-dark">
                <tr>
                    <th style="width: 30%">Nome</th>
                    <th style="width: 20%">Lado</th>
                    <th style="width: 20%">Area</th>
                    <th style="width: 10%">id</th>
                    <th style="width: 20%"></th>
                </tr>
            </thead>
            <tbody>
                <% for (evento of eventos){ %>
                    <tr>
                        <td><%- evento.nome %></td>
                        <td><%- evento.lado %></td>
                        <td><%- evento.area %></td>
                        <td><%- evento.id %></td>
                        <td><a href="/eventos/<%- evento.id %>" class="btn btn-outline-secondary">Detalhes</a>
                    </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
