<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <title>Usuarios listados</title>
    <%- include('../views/head'); %>
</head>
<body>
    <%- include('../views/nav'); %>
    <div class="text-center pt-4">
        <h2>Usuarios listados</h2>
        <p class="lead">Segue abaixo relação de usuarios já incluídos</p>
    </div>
    <table class="table table-hover" style="margin: 0 auto; width: 70%;">
        <thead class="table-dark">    
            <tr>
                <th style="width: 30%">Nome</th>
                <th style="width: 20%">Senha</th>
                <th style="width: 10%">Papel</th>
                <th style="width: 40%">Id</th>
                <th colspan="2" style="width: 20%">Opções</th>
            </tr>
        </thead>
        <tbody>
    <% for (usuario of usuarios){ %>
            <tr>    
                <td><%- usuario.nome %></td>
                <td><%- usuario.senha %></td>
                <td><%- usuario.papel %></td>
                <td><%- usuario.id %></td>
                <td><a href='#' onclick="deletar(<%- usuario.id %>)"><img src="/_img/x-circle.svg" style="width: 20px;"></a></td> 
            </tr>
    <% } %>
        </tbody>
    </table>
    <div  class="text-center">

        <a href="/usuarios" class="btn btn-outline-secondary" style="margin-top: 10px; margin-bottom: 10px;">Voltar</a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<footer>
    <%- include('../views/footer'); %>
</footer>
</body>
</html>

<script src="/_js/usuarios.js"></script>