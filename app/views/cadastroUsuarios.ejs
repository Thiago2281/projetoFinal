<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <title>Cadastro</title>
    <%- include('../views/head'); %>
</head>
<body>
    <%- include('../views/nav'); %>
    <section id="contact">
        <div class="container-lg">
          <div class="text-center">
            <h2>Cadastro de usuarios <%- (usuario.id) %></h2>
            <p class="lead">Inclua abaixo os dados do usuario a ser cadastrado</p>
          </div>       
          <div class="row justify-content-center my-5">
            <div class="col-lg-6">
              <% if (usuario.id) { %>  
              <form method="POST" onSubmit="event.preventDefault(); formEditar(<%- usuario.id %>);" class="form">
                <% }else{ %> 
                  <form method="POST" class="form">
                  <% } %>
                    <label for="nome" class="form-label">Nome:</label>
                    <div class="input-group mb-4">
                        <span class="input-group-text">
                            <i class="bi bi-envelope-fill text-secondary"></i>
                        </span>
                        <input type="text" name="nome" id="nome" class="form-control" placeholder="Nome do usuario" value="<%- usuario.nome %>" required/>
                    </div>
                    <label for="senha" class="form-label">Senha:</label>
                    <div class="input-group mb-4">
                        <span class="input-group-text">
                            <i class="bi bi-envelope-fill text-secondary"></i>
                        </span>
                        <input type="text" name="senha" id="senha" class="form-control" placeholder="Senha do usuario" value="<%- usuario.senha %>" required/>
                    </div>
                    <label for="papel" class="form-label">Papel (1 para admin, 2 para geral):</label>
                    <div class="input-group mb-4">
                        <span class="input-group-text">
                            <i class="bi bi-envelope-fill text-secondary"></i>
                        </span>
                        <input type="number" name="papel" id="papel" class="form-control" placeholder="Papel do usuario" value="<%- usuario.papel %>" required/>
                    </div>


                      <div class="mb-4 text-center">
                        <a href="/usuarios/cadastro">
                        <button type="submit" class="btn btn-secondary">Enviar</button></a>
                        </div>

              </form>
            </div>
          </div>
        </div>
      </section>
      <div id="erro">

      </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<footer>
    <%- include('../views/footer'); %>
</footer>
</body>
</html>

<script src="/_js/usuarios.js"></script>